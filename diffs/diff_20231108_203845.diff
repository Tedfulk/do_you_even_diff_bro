+def create_diff_file_and_get_path(repo_path: str, base_branch: str = "main") -> str:
+    """
+    Runs git diff to the base_branch, saves it to a file with the current timestamp, and returns the file path.
+
+    :param repo_path: The path to the git repository.
+    :param base_branch: The base branch to diff against, default to 'main'.
+    :return: The file path to the saved git diff.
+    """
+    # Ensure the diffs directory exists
+    diffs_dir = os.path.join(repo_path, "diffs")
+    os.makedirs(diffs_dir, exist_ok=True)
+
+    # Name the file with the current timestamp
+    timestamp = datetime.now().strftime("%Y%m%d_%H%M%S")
+    diff_file_name = f"diff_{timestamp}.diff"
+    diff_file_path = os.path.join(diffs_dir, diff_file_name)
+
+    # Run git diff and write the output to the file
+    git_diff_cmd = ["git", "-C", repo_path, "diff", base_branch]
+    with open(diff_file_path, "wb") as diff_file:
+        subprocess.run(git_diff_cmd, stdout=diff_file)
+
+    return diff_file_path
